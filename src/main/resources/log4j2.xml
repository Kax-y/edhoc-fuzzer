<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss} [%t] %-5level : %logger{1}} - %msg%n%throwable"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.github.protocolfuzzing.edhocfuzzer.components.sul.core.protocol.MessageProcessorPersistent" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.protocolfuzzing.edhocfuzzer" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.protocolfuzzing.protocolstatefuzzer" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.protocolfuzzing.protocolstatefuzzer.components.sul.core.sulwrappers.LogginWrapper" level="debug">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="de.learnlib.ralib.learning.AutomatonBuilder" level="error">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="de.learnlib.ralib.learning.CounterexampleAnalysis" level="trace">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="de.learnlib.ralib.learning.rastar.RaStar" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="de.learnlib.ralib.learning.rastar" level="error" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="de.learnlib.ralib" level="info" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="org.eclipse.californium" level="error">
            <AppenderRef ref="Console" />
        </Logger>
                <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>

<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss} [%t] %-5level : %logger{1}} - %msg%n%throwable"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.github.protocolfuzzing.edhocfuzzer" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.protocolfuzzing.protocolstatefuzzer" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="de.learnlib.ralib.learning.AutomatonBuilder" level="error">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="de.learnlib.ralib" level="debug" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="org.eclipse.californium" level="info" additivity= "false">
            <AppenderRef ref="Console" />
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
